---
import SolutionsBanner from "../components/SolutionsBanner.astro";
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={`Leetcode | ${frontmatter.title}`}>
  <SolutionsBanner />
  <div class="md:mx-40 mx-4">
    <div
      class="flex flex-col md:flex-row justify-between gap-4 md:gap-0 items-center mt-8 border-b-2 border-blue-700 dark:border-orange-300 py-3"
    >
      <h1 class="text-2xl font-black text-blue-700 dark:text-orange-600">{frontmatter.title}</h1>
      <p>Created on: {frontmatter.createdDate}</p>
    </div>
    <h3 class="font-semibold text-xl text-center py-2 text-blue-700 dark:text-white">
      Language Used: {frontmatter.language}
    </h3>
    <slot />
  </div>
</BaseLayout>
