---
import SolutionsBanner from "../components/SolutionsBanner.astro";
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
import { SiLeetcode } from "react-icons/si";
---

<BaseLayout pageTitle={`Leetcode | ${frontmatter.title}`}>
  <SolutionsBanner />
  <div class="md:mx-40 mx-4 relative">
    <div class="flex justify-end items-end py-4">
      <a
        href="/solutions"
        class="p-2 bg-slate-600 text-white dark:bg-slate-300 dark:text-blue-800 rounded-lg font-semibold hover:bg-slate-700 dark:hover:bg-slate-200 flex"
        >Back to all solutions</a
      >
    </div>
    <div
      class="flex flex-col md:flex-row justify-between gap-4 md:gap-0 items-center mt-4 border-b-2 border-blue-700 dark:border-orange-300 py-3"
    >
      <h1 class="text-2xl font-black text-blue-700 dark:text-orange-600">{frontmatter.title}</h1>
      <p>Created on: {frontmatter.createdDate}</p>
    </div>
    <div class="my-4 font-semibold text-lg text-center text-blue-900 dark:text-blue-100">
      <p>{frontmatter.question}</p>
    </div>
    <h3 class="font-semibold text-xl text-center py-4 text-blue-700 dark:text-white">
      Language Used: {frontmatter.language}
    </h3>

    <pre><code class="language-python"><slot /></code></pre>
    <p class="my-4 text-lg flex flex-row gap-4 justify-start items-center">
      Leetcode Link: <a href={frontmatter.leetcodeLink} target="_blank" rel="noreferrer"><SiLeetcode /></a>
    </p>
  </div>
</BaseLayout>
